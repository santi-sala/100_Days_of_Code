<ul class="nav-items">
  <!-- Always available for non admins -->
  <% if(!locals.isAdmin) { %>
  <li><a href="/">Shop</a></li>
  <li>
    <a href="/cart"
      >Cart <span class="badge"><%= locals.cart.totalQuantity %></span></a
    >
  </li>
  <% } %>

  <!-- Only available when logged in and not an admin -->
  <% if(locals.isAuth && !locals.isAdmin) { %>
  <li><a href="/orders">Orders</a></li>
  <% } %>

  <!-- Only available for admins -->
  <% if(locals.isAdmin) { %>
  <li><a href="/admin/products">Manage products</a></li>
  <li><a href="/admin/orders">Manage orders</a></li>
  <% } %>

  <!-- Visisble when not logged in -->
  <% if(!locals.isAuth) { %>
  <li><a href="/signup">Signup</a></li>
  <li><a href="/login">Login</a></li>
  <% } %>

  <!-- Only visisble when logged in, either admin or not -->
  <% if (locals.isAuth === true) {%>
  <li>
    <form action="/logout" method="POST">
      <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>" />
      <button>Logout</button>
    </form>
  </li>
  <% } %>
</ul>
